{
  "name": "@big0290/sv-prj-helper-ui",
  "version": "0.8.0",
  "description": "Modern Svelte 5 UI library with glassmorphism design and full accessibility",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Big0290/sv-prj-helper.git"
  },
  "publishConfig": {
    "registry": "https://npm.pkg.github.com"
  },
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "svelte": "./dist/index.js",
  "sideEffects": [
    "*.css",
    "*.scss"
  ],
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "svelte": "./dist/index.js",
      "import": "./dist/index.js",
      "default": "./dist/index.js"
    },
    "./styles": {
      "import": "./dist/styles/theme.css",
      "default": "./dist/styles/theme.css"
    },
    "./package.json": "./package.json"
  },
  "files": [
    "dist",
    "README.md",
    "CHANGELOG.md"
  ],
  "scripts": {
    "dev": "vite dev",
    "build": "svelte-kit sync && svelte-package --input src/lib",
    "package": "svelte-kit sync && svelte-package --input src/lib",
    "preview": "vite preview",
    "check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
    "check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
    "prepublishOnly": "npm run build",
    "test": "echo \"No tests specified\" && exit 0",
    "validate:release": "node scripts/release/validate-release.js",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build"
  },
  "devDependencies": {
    "@chromatic-com/storybook": "^4.1.2",
    "@storybook/addon-a11y": "^10.0.1",
    "@storybook/addon-docs": "^10.0.1",
    "@storybook/addon-svelte-csf": "^5.0.10",
    "@storybook/addon-vitest": "^10.0.1",
    "@storybook/sveltekit": "^10.0.1",
    "@sveltejs/adapter-auto": "^3.0.0",
    "@sveltejs/kit": "^2.0.0",
    "@sveltejs/package": "^2.0.0",
    "@sveltejs/vite-plugin-svelte": "^4.0.0",
    "@types/prismjs": "^1.26.5",
    "@types/qrcode": "^1.5.6",
    "conventional-changelog-cli": "^5.0.0",
    "storybook": "^10.0.1",
    "svelte": "^5.0.0",
    "svelte-check": "^4.0.0",
    "typescript": "^5.0.0",
    "vite": "^5.0.0"
  },
  "peerDependencies": {
    "svelte": "^5.0.0"
  },
  "keywords": [
    "svelte",
    "svelte5",
    "ui-library",
    "components",
    "glassmorphism",
    "accessible",
    "a11y"
  ],
  "license": "MIT",
  "dependencies": {
    "@codemirror/autocomplete": "^6.19.1",
    "@codemirror/basic-setup": "^0.20.0",
    "@codemirror/commands": "^6.10.0",
    "@codemirror/lang-css": "^6.3.1",
    "@codemirror/lang-html": "^6.4.11",
    "@codemirror/lang-javascript": "^6.2.4",
    "@codemirror/lang-json": "^6.0.2",
    "@codemirror/lang-markdown": "^6.5.0",
    "@codemirror/lang-python": "^6.2.1",
    "@codemirror/search": "^6.5.11",
    "@codemirror/state": "^6.5.2",
    "@codemirror/theme-one-dark": "^6.1.3",
    "@codemirror/view": "^6.38.6",
    "@zxing/library": "^0.21.3",
    "chart.js": "^4.5.1",
    "glob": "^11.0.3",
    "jsbarcode": "^3.12.1",
    "jsqr": "^1.4.0",
    "marked": "^16.4.1",
    "prismjs": "^1.30.0",
    "qrcode": "^1.5.4",
    "svelte-dnd-action": "^0.9.66"
  }
}
