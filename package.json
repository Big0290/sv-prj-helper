{
  "name": "@big0290/sv-prj-helper-ui",
  "version": "0.1.0",
  "description": "Modern Svelte 5 UI library with glassmorphism design and full accessibility",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Big0290/sv-prj-helper.git"
  },
  "publishConfig": {
    "registry": "https://npm.pkg.github.com"
  },
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "svelte": "./dist/index.js",
  "sideEffects": [
    "*.css",
    "*.scss"
  ],
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "svelte": "./dist/index.js",
      "import": "./dist/index.js",
      "default": "./dist/index.js"
    },
    "./styles": {
      "import": "./dist/styles/theme.css",
      "default": "./dist/styles/theme.css"
    },
    "./ui": {
      "types": "./dist/ui/index.d.ts",
      "svelte": "./dist/ui/index.js",
      "import": "./dist/ui/index.js",
      "default": "./dist/ui/index.js"
    },
    "./docs": {
      "types": "./dist/docs/index.d.ts",
      "import": "./dist/docs/index.js",
      "default": "./dist/docs/index.js"
    },
    "./hooks": {
      "types": "./dist/hooks/index.d.ts",
      "import": "./dist/hooks/index.js",
      "default": "./dist/hooks/index.js"
    },
    "./package.json": "./package.json"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "dev": "vite dev",
    "build": "vite build && npm run package",
    "build:lib": "node scripts/build-lib.js",
    "validate:build": "node scripts/validate-build.js",
    "package": "svelte-kit sync && svelte-package --input src/lib && npm run package:optimize",
    "package:optimize": "node scripts/optimize-package.js",
    "preview": "vite preview",
    "check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
    "check:lib": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.lib.json",
    "check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
    "prepublishOnly": "npm run build:lib && npm run validate:build",
    "release": "npm run release:patch",
    "release:patch": "node scripts/release.js patch",
    "release:minor": "node scripts/release.js minor",
    "release:major": "node scripts/release.js major",
    "release:script": "node scripts/release.js",
    "changelog": "conventional-changelog -p angular -i CHANGELOG.md -s && git add CHANGELOG.md",
    "version": "npm run changelog && git add CHANGELOG.md",
    "validate:release": "node scripts/validate-release.js",
    "docs:generate": "node scripts/docs-cli.js generate",
    "docs:validate": "node scripts/docs-cli.js validate",
    "docs:list": "node scripts/docs-cli.js list",
    "docs:help": "node scripts/docs-cli.js help",
    "component:generate": "node scripts/component-generator.js",
    "component:validate": "node scripts/docs-validator.js",
    "component:test": "node scripts/test-utils.js",
    "test:generate": "node scripts/test-utils.js generate",
    "test:a11y": "node scripts/test-utils.js a11y",
    "test:coverage": "node scripts/test-utils.js coverage",
    "dev:tools": "node scripts/dev-tools.js",
    "dev:status": "node scripts/dev-tools.js status",
    "dev:setup": "node scripts/dev-tools.js setup"
  },
  "devDependencies": {
    "@sveltejs/adapter-auto": "^3.0.0",
    "@sveltejs/kit": "^2.0.0",
    "@sveltejs/package": "^2.0.0",
    "@sveltejs/vite-plugin-svelte": "^4.0.0",
    "@types/prismjs": "^1.26.5",
    "@types/qrcode": "^1.5.6",
    "conventional-changelog-cli": "^5.0.0",
    "svelte": "^5.0.0",
    "svelte-check": "^4.0.0",
    "typescript": "^5.0.0",
    "vite": "^5.0.0"
  },
  "peerDependencies": {
    "svelte": "^5.0.0"
  },
  "keywords": [
    "svelte",
    "svelte5",
    "ui-library",
    "components",
    "glassmorphism",
    "accessible",
    "a11y"
  ],
  "license": "MIT",
  "dependencies": {
    "@codemirror/autocomplete": "^6.19.1",
    "@codemirror/basic-setup": "^0.20.0",
    "@codemirror/commands": "^6.10.0",
    "@codemirror/lang-css": "^6.3.1",
    "@codemirror/lang-html": "^6.4.11",
    "@codemirror/lang-javascript": "^6.2.4",
    "@codemirror/lang-json": "^6.0.2",
    "@codemirror/lang-markdown": "^6.5.0",
    "@codemirror/lang-python": "^6.2.1",
    "@codemirror/search": "^6.5.11",
    "@codemirror/state": "^6.5.2",
    "@codemirror/theme-one-dark": "^6.1.3",
    "@codemirror/view": "^6.38.6",
    "@zxing/library": "^0.21.3",
    "glob": "^11.0.3",
    "jsbarcode": "^3.12.1",
    "jsqr": "^1.4.0",
    "marked": "^16.4.1",
    "prismjs": "^1.30.0",
    "qrcode": "^1.5.4"
  }
}
